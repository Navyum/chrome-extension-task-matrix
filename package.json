{
  "name": "taskmatrix-pro",
  "version": "1.0.0",
  "description": "基于艾森豪威尔矩阵的跨浏览器任务管理插件",
  "main": "background/background.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:chrome": "webpack --mode production --env browser=chrome",
    "build:firefox": "webpack --mode production --env browser=firefox",
    "build:all": "npm run clean && npm run build:chrome && npm run build:firefox",
    "build:pack": "npm run build:all && npm run pack:chrome && npm run pack:firefox",
    "pack:chrome": "mkdir -pv build && cd dist/chrome && zip -r ../../build/taskmatrix-pro-chrome.zip *",
    "pack:firefox": "mkdir -pv build && cd dist/firefox && zip -r ../../build/taskmatrix-pro-firefox.xpi *",
    "pack:all": "npm run pack:chrome && npm run pack:firefox",
    "dev": "webpack --mode development --watch",
    "dev:chrome": "webpack --mode development --watch --env browser=chrome",
    "dev:firefox": "webpack --mode development --watch --env browser=firefox",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "clean": "rm -rf dist",
    "release": "./scripts/release.sh"
  },
  "keywords": [
    "chrome-extension",
    "firefox-extension",
    "firefox-addon",
    "task-management",
    "eisenhower-matrix",
    "productivity",
    "time-management"
  ],
  "author": "TaskMatrix Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "d3": "^7.9.0",
    "date-fns": "^2.30.0"
  },
  "browserslist": [
    "Chrome >= 88",
    "Firefox >= 78"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
